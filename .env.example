# Host ports
API_PORT=8000
API_INTERNAL_PORT=8000
FRONTEND_PORT=5173
FRONTEND_INTERNAL_PORT=5173
FLOWER_PORT=5555
FLOWER_INTERNAL_PORT=5555
POSTGRES_PORT=5432
REDIS_PORT=6379
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001
MINIO_CONSOLE_INTERNAL_PORT=9001

# App connections (inside docker network)
POSTGRES_DB=media_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+psycopg2://postgres:postgres@postgres:5432/media_platform
REDIS_URL=redis://redis:6379/0

# Browser-facing settings
CORS_ORIGINS=http://localhost:5173
VITE_API_BASE_URL=

MEDIA_ROOT=/tmp/media
MAX_ACTIVE_TASKS_PER_USER=3
CLEANUP_MAX_AGE_HOURS=72

# S3/MinIO is optional. Keep false to run without object storage.
S3_ENABLED=false
S3_ENDPOINT_URL=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=media
S3_REGION=us-east-1
S3_PUBLIC_BASE_URL=http://localhost:9000
